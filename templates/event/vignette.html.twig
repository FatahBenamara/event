<div class="card">
	{% if event.couverture is not null %}
    	<img class="car-img-top" src="{{ asset(url_images ~ event.couverture) }}">
  	{% endif %}

	<div class="card-body">
		<h4 class="card-title">{{ event.nom }}</h4>
		
		
		<p class="card-text">{{ event.auteur|upper }}</p>
		{% if is_granted("ROLE_ADMIN") %}
			<a href="{{ path("event_show", { id: event.id}) }}" class="card-link">
				<i class="fa fa-book"></i>
			</a>
		{% else %}
			<a href="{{ path("event_afficher", { id: event.id}) }}" class="card-link">
				<i class="fa fa-book"></i>
			</a>

		{% endif %}

	</div>
</div>
